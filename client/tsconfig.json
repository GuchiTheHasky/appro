{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "preserve",
    "strict": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "baseUrl": "src",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".cache-loader"
  ],
  "include": [
    "src"
  ]
}
